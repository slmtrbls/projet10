{
  "bindings": [
    {
      "authLevel": "Function",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": [
        "get",
        "post"
      ],
      "route": "recommendations"
    },
    {
      "type": "blob",
      "direction": "in",
      "name": "embedding_blob",
      "path": "models/embeddings_pca.pkl",
      "connection": "AzureWebJobsStorage"
    },
    {
      "type": "blob",
      "direction": "in",
      "name": "model_blob",
      "path": "models/svd_best_model_pca.pkl",
      "connection": "AzureWebJobsStorage"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "res"
    }
  ]
}

